<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.70" >

        <TextView
            android:id="@+id/txt_notifinfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Notification Details sefsdfsdf sdfsdf fsdfdf sdfsdfsdf sfdsdf sdfs"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/img_notificon2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/txt_notifinfo2"
            android:layout_marginLeft="10dp"
            android:background="#4CBB17"
            android:src="@drawable/ic_addmember" />

        <TextView
            android:id="@+id/txt_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_notifinfo2"
            android:layout_marginLeft="5dp"
